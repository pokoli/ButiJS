html
    head
        title Butifarra's Game Server
        script(type='text/javascript',src='/socket.io/socket.io.js')
        script(type='text/javascript',src='/public/jquery-1.7.1.min.js')
        script(type='text/javascript',src='/public/jquery-ui-1.8.17.custom.min.js')
        script(type='text/javascript',src='/public/kinetic-v3.7.1.js')
        script(type='text/javascript',src='/public/kinetic-image-plugin-v1.0.1.js')
        script(type='text/javascript',src='/public/ui.js')
        script(type='text/javascript',src='/public/client.js')
        link(rel='stylesheet',type='text/css',href='/public/style.css')
        link(rel='stylesheet',type='text/css',href='/public/jquery-ui.css')
    body(onLoad='doLoad();')
    #container
        div#login-dialog(title='Login')
            form
            fieldset
                label(for='login-name') Enter your name
                input#login-name(type='text',name='login-name',class='text ui-widget-content ui-corner-all')
        div#create-game-dialog(title='New Game')
            form
            fieldset
                label(for='game-name') Name
                input#game-name(type='text',name='game-name',class='text ui-widget-content ui-corner-all')
        div#tabs
            ul
                li 
                    a(href='#chat') Chat
                li 
                    a(href='#games') Games 
            div#chat.row
                div#chat-messages.cell.bordered
                    ul#messages.scrolled
                        li Welcome to the Chat!
                div#chat-players.cell.bordered
                    p Players
                    ul#player-list
                form#chat-form(action='javascript:send();')
                   input#msg(type='text',value='')
            div#games.row
                table#game-list.cell.bordered
                div#game-details.cell.bordered
                    p Game Details
                form#game-form
                    input#join(type='button',value='Join game')
                    input#watch(type='button',value='Watch game')
                    input#create(type='button',value='Create game')
